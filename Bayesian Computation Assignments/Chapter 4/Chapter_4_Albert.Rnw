rdirichlet <- function(m, alpha){
  theta <- matrix(nrow = m, ncol = length(alpha))
  
  for(i in 1:length(alpha)){
    theta[,i] <- rgamma(m, alpha[i], 1)
  }
  
  for(i in 1:nrow(theta)){
    T = sum(theta[i,])
    
    theta[i,] <- theta[i,]/T
  }
  
  return(theta)
}

