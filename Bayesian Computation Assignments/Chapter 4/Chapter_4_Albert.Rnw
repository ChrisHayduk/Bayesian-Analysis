logisticpost <- function(beta, data){
  post <- 1
  
  for(i in 1:nrow(data)){
    p <- exp(beta[1] + beta[2]*data[i, 1])
    
    p <- p/(1+exp(beta[1] + beta[2]*data[i, 1]))
    
    y <- data[i, 3]
    n <- data[i, 2]
    
    post <- post * (p^y * (1-p)^(n-y))
  }
  
  return(log(post))
}

