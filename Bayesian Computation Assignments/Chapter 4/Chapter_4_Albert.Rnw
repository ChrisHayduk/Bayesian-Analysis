normpostsim <- function(data, m){
  S <- sum((data-mean(data))^2)
  
  n <- length(data)
  
  sigma2 <- S/rchisq(m, n-1)
  
  mu <- rnorm(m, mean = mean(data), sd = sqrt(sigma2)/sqrt(n))
  
  results <- data.frame(mu = mu, sigma2 = sigma2)
  
  return(results)
}

